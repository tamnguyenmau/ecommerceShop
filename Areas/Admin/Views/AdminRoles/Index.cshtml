@model IEnumerable<ECommerceShop.Models.Role>

@{
    ViewData["Title"] = "Quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Wrapper START -->
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách Quyền truy cập</span>
        </nav>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
            </div>
            <div class="col-lg-4 text-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Thêm mới</span>
                </a>
             
            </div>
        </div>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="records_table">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.RoleId</th>
                                <td scope="row">@item.RoleName</td>
                                <td scope="row">@item.Description</td>
                                <td>
                                    <a asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-primary btn-tone m-r-5">Edit</a>
                                    <a asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-success  btn-tone m-r-5">Details</a>
                                    <a asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger btn-tone m-r-5">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
