@model ECommerceShop.Models.Role

@{
    ViewData["Title"] = "Xoá quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<nav class="breadcrumb breadcrumb-dash">
    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
    <a class="breadcrumb-item" asp-action="Index" asp-controller="AdminRoles" asp-area="Admin">Danh sách quyền truy cập</a>
    <span class="breadcrumb-item active">Xoá quyền truy cập</span>
</nav>

<h1>Delete</h1>

<h3>Bạn có chắc xoá quyền?</h3>
<div>
    <h4>Role</h4>
    <hr />
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Role Name</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@Model.RoleId</th>
                    <td>@Model.RoleName</td>
                    <td>@Model.Description</td>
                </tr>

            </tbody>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <input type="submit" value="Delete" class="btn btn-danger btn-tone m-r-5" /> |
        <a asp-action="Index">Quay lại</a>
    </form>
</div>