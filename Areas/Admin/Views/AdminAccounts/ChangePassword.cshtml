@{
    Layout = null;
}
@model ECommerceShop.Areas.Admin.Models.ChangePasswordAdmin

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Đăng ký</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="/assets/images/logo/1146805_122148-OQK6HA-101 copy.png">

    <!-- page css -->
    <!-- Core css -->
    <link href="/AdminAssets/assets/css/app.min.css" rel="stylesheet">

</head>

<body>
    <div class="app">
        <div class="container-fluid p-0 h-100">
            <div class="row no-gutters h-100 full-height">
                <div class="col-lg-4 d-none d-lg-flex bg" style="background-image:url('/AdminAssets/assets/images/others/login-1.jpg')">
                    <div class="d-flex w-100 h-100 p-h-40 p-v-15 flex-column justify-content-between">
                        <div class=" d-flex justify-content-center">
                            <img src="/assets/images/logo/1146805_122148-OQK6HA-101 copy 2.png" style="width:300px" alt="">
                        </div>
                        <div>
                            <h1 class="text-white m-b-20 font-weight-normal">Admin Change Password</h1>

                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-white">© 2024 </span>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a class="text-white text-link" href="">Legal</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-white text-link" href="">Privacy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 bg-white">
                    <div class="container h-100">
                        <div class="row no-gutters h-100 align-items-center">
                            <div class="col-md-8 col-lg-7 col-xl-6 mx-auto">
                                <h2>Đổi mật khẩu</h2>
                                <p class="m-b-30">
                                    Nhập thông tin xác thực của bạn để có quyền truy cập
                                </p>
                                <form asp-controller="AdminAccounts" asp-action="ChangePassword" method="post">
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="userName">Current Password:</label>
                                        <div class="input-affix">
                                            <i class="prefix-icon anticon anticon-user"></i>
                                            <input type="text" class="form-control" asp-for="CurrentPassword" placeholder="CurrentPassword">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="password">New Password:</label>

                                        <div class="input-affix m-b-10">
                                            <i class="prefix-icon anticon anticon-lock"></i>
                                            <input type="password" class="form-control" asp-for="NewPassword" placeholder="NewPassword">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="font-weight-semibold" for="password">Confirm Password:</label>
                                        <div class="input-affix m-b-10">
                                            <i class="prefix-icon anticon anticon-lock"></i>
                                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="ConfirmPassword">
                                        </div>
                                    </div>
                                    <span class="text-danger">@ViewBag.LoginMessage</span>

                                    <div class="form-group">
                                        <div class="d-flex align-items-center justify-content-between">
                                            <span class="font-size-13 text-muted">
                                               
                                                <a class="small" asp-controller="AdminAccounts" asp-action="Login"> Return Login</a>
                                            </span>
                                            <button type="submit" class="btn btn-primary">Change</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Vendors JS -->
    <script src="/AdminAssets/assets/js/vendors.min.js"></script>

    <!-- page js -->
    <!-- Core JS -->
    <script src="/AdminAssets/assets/js/app.min.js"></script>

</body>

</html>