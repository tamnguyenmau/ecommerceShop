@model IEnumerable<ECommerceShop.Models.Page>
@using PagedList.Core.Mvc


@{
    ViewData["Title"] = "Danh sách Page";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper START -->
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách sản phẩm </span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <div class="input-affix m-b-10">
                            <i class="prefix-icon anticon anticon-search"></i>
                            <input id="keyword" name="keyword" type="text" class="form-control" placeholder="Search">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Thêm mới</span>
                </a>
                </button>
            </div>
        </div>
        <div class="table-responsive">
            <table id="data-table" class="table">
                <thead>
                    <tr>

                        <th>ID</th>
                        <th>Page Name</th>
                        <th>Positon</th>
                        <th>Status</th>
                        <th>Create Time</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="records_table">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.PageId
                                </td>
                                <td>
                                    <div class="d-flex flex-column">
                                        <h6 class="m-b-0 m-l-10">@item.PageName</h6>
                                        <img class="img-fluid rounded" src="@item.Thumb" style="max-width: 60px" alt="">
                                    </div>
                                </td>
                                <td>@item.Position</td>
                                <td>
                                    @if (item.Status == true)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Unlock</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>Lock</div>
                                        </div>
                                    }
                                </td>
                                <td>@item.CreateTime</td>

                                <td class="text-right">

                                    <a asp-action="Edit" asp-route-id="@item.PageId" class="btn btn-primary btn-tone m-r-5">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.PageId" class="btn btn-success btn-tone m-r-5">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.PageId" class="btn btn-danger btn-tone m-r-5">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    @* <pager class="pager-container" list="@Model" asp-area="Admin" asp-route-CatID="@ViewBag.CurrentCateID" asp-controller="AdminProducts" asp-action="Index" /> *@
                </ul>
            </div>
        </div>
    </div>
</div>