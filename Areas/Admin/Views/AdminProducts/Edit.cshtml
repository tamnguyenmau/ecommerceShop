@model ECommerceShop.Models.Product

@{
    ViewData["Title"] = "Sửa thông tin sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
}
<h1>Edit</h1>

<h4>Product</h4>
<hr />

<form asp-controller="AdminProducts" method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="page-header no-gutters has-tab">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Basic Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-option">Option Info</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#product-edit-description">Description</a>
            </li>
        </ul>
    </div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductId" />
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên sản phẩm</label>
                        <input type="text" class="form-control" asp-for="ProductName" placeholder="">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="ShortDesc">Mô tả ngắn</label>
                        <input type="text" class="form-control" asp-for="ShortDesc" placeholder="">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="Price">Giá bán</label>
                            <input type="text" class="form-control" asp-for="Price" placeholder="Price">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="Discount">Giá giảm</label>
                            <input type="text" class="form-control" asp-for="Discount" placeholder="Discount">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="UnitslnStock">Số lượng</label>
                            <input class="form-control" asp-for="UnitslnStock" placeholder="UnitslnStock">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="CatId">Danh mục sản phẩm</label>
                            <select asp-for="CatId" class="form-control" asp-items="ViewBag.Category"></select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-semibold" for="Thumb">Ảnh đại diện</label>
                        <input type="file" class="form-control" asp-for="Thumb">
                        <span asp-validation-for="Thumb" class="text-danger"></span>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" asp-for="Status" checked="">
                            <label for="Status"></label>
                        </div>
                        <label>Status</label>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" asp-for="HomeFlag" checked="">
                            <label for="HomeFlag"></label>
                        </div>
                        <label>Home Flag</label>
                    </div>
                    <div class="form-group d-flex align-items-center">
                        <div class="switch m-r-10">
                            <input type="checkbox" asp-for="Bestsellers" checked="">
                            <label for="Bestsellers"></label>
                        </div>
                        <label>Best Sellers</label>
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-option">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="Title">Tiêu đề</label>
                        <input type="text" class="form-control" asp-for="Title" placeholder="MetaDesc">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaDesc">Meta Desc</label>
                        <input type="text" class="form-control" asp-for="MetaDesc" placeholder="MetaDesc">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="MetaKey">Meta Key</label>
                        <input type="text" class="form-control" asp-for="MetaKey" placeholder="MetaKey">
                    </div>


                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="product-edit-description">
            <div class="card">
                <div class="card-body">
                    <textarea id="summernote" asp-for="Content">

                     </textarea>
                </div>
            </div>
        </div>
    </div>
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="m-b-15 form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

}


