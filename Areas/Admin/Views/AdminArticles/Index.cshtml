@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<ECommerceShop.Models.Article>

@{
    int currentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper START -->
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-action="Index" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách sản phẩm : page @currentPage</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">
                    <div class="m-b-10 m-r-15">
                        <div class="input-affix m-b-10">
                            <i class="prefix-icon anticon anticon-search"></i>
                            <input id="txtkeyword" name="txtkeyword" type="text" class="form-control" placeholder="Search">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Thêm mới</span>
                </a>
                </button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>ArticleID</th>
                        <th>Title</th>
                        <th>Thumb</th>
                        <th>Status</th>
                        <th>CreateDate</th>
                        <th>Author</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="records_article">
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.ArticleId
                                </td>
                                <td>
                                    <h6 class="m-b-0 m-l-10">@item.Title</h6>
                                </td>
                                <td>
                                    <img class="img-fluid rounded" src="/images/news/@item.Thumb" style="max-width: 60px" alt="">

                                </td>
                                <td>
                                    @if (item.Status == true)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div>Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>Block</div>
                                        </div>
                                    }
                                </td>

                                <td>@item.CreateDate</td>
                                <td>@item.Author</td>
                                <td class="text-right">

                                    <a asp-action="Edit" asp-route-id="@item.ArticleId" class="btn btn-primary btn-tone m-r-5">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.ArticleId" class="btn btn-success btn-tone m-r-5">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.ArticleId" class="btn btn-danger btn-tone m-r-5">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminArticles" asp-action="Index" />
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Content Wrapper END -->
@section Scripts {
    <script>
        $(document).ready(function () {

            $("#txtkeyword").keyup(function () {
                var strkeyword = $('#txtkeyword').val();
                $.ajax({
                    url: '/Admin/Search/FindArticle/',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (results) {
                        $("#records_article").html("");
                        $("#records_article").html(results);
                    },
                    error: function (xhr) {
                        alert(xhr);
                    }
                });
            });
        });
    </script>
}