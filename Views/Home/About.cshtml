@model Page
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" >
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Về chúng tôi</h2>
                        <ul>
                            <li>
                                <a href="/">Trang chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Về chúng tôi</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="about-banner different-bg-position section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-5">
                    <div class="parallax-img-wrap">
                        <div class="papaya">
                            <div class="scene fill">
                                <div class="expand-width" data-depth="0.2">
                                    <img src="/images/pages/about.jpg" alt="Banner Images">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7 align-self-center">
                    <div class="about-banner-content">
                        <div class="section-title">
                            <span class="sub-title">Welcome To Organic Store</span>
                            <h2 class="title font-size-60 mb-6">Best Organic Shop</h2>
                            <p class="short-desc mb-0">
                                Organic Shop là điểm đến lý tưởng cho những người chú trọng đến lối sống lành mạnh và bền vững. Tại đây, bạn sẽ khám phá một thế giới của sự tinh tế và tự nhiên, nơi mọi sản phẩm đều được chọn lọc cẩn thận từ những nguồn nguyên liệu hữu cơ chất lượng cao. Với sự cam kết về việc không sử dụng hóa chất độc hại, cửa hàng organic không chỉ là nơi để mua sắm, mà còn là một trải nghiệm tận hưởng sự thuần khiết của thực phẩm và sản phẩm chăm sóc cá nhân. Đội ngũ nhân viên tận tâm sẽ giúp bạn tìm hiểu về lợi ích của việc ủng hộ lối sống organic và hướng dẫn bạn chọn lựa những sản phẩm phù hợp với nhu cầu và giá trị cá nhân của bạn. Hãy bước vào thế giới organic, nơi sức khỏe và bền vững kết hợp hài hòa, để bạn có được cuộc sống lành mạnh từ bên trong
                            </p>
                            <div class="button-wrap pt-8">
                                <a class="btn btn-custom-size lg-size btn-primary btn-dark-hover rounded-0" href="sanpham">Mua sắm ngay</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</main>
<!-- Main Content Area End Here -->
