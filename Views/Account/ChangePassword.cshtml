@model ECommerceShop.Req.ChangePassword

<form asp-controller="Account" asp-action="ChangePassword" method="post" class="myaccount-form">
    <div class="myaccount-form-inner">
        <div class="single-input">
            <label>
                Mật khẩu hiện tại
            </label>
            <input asp-for="CurrentPassword" type="password">
        </div>
        <div class="single-input">
            <label>
                Mật khẩu mới
            </label>
            <input asp-for="NewPassword" type="password">
        </div>
        <div class="single-input">
            <label>Nhập lại mật khẩu</label>
            <input asp-for="ConfirmPassword" type="password">
        </div>
        <div class="single-input">
            <button class="btn btn-custom-size lg-size btn-secondary btn-primary-hover rounded-0" type="submit">
                <span>Đổi mật khẩu</span>
            </button>
        </div>
    </div>
</form>
